<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.asset.mapper.ProcurementRequirementMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.ProcurementRequirement">
        <id column="requirement_id" property="requirementId"/>
        <result column="requirement_no" property="requirementNo"/>
        <result column="requirement_name" property="requirementName"/>
        <result column="requirement_type" property="requirementType"/>
        <result column="dept_id" property="deptId"/>
        <result column="applicant_id" property="applicantId"/>
        <result column="estimated_amount" property="estimatedAmount"/>
        <result column="requirement_desc" property="requirementDesc"/>
        <result column="status" property="status"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM procurement_requirement WHERE requirement_id = #{id}
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM procurement_requirement WHERE status = #{status} ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM procurement_requirement ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.ProcurementRequirement">
        INSERT INTO procurement_requirement (requirement_no, requirement_name, requirement_type, dept_id,
                                            applicant_id, estimated_amount, requirement_desc, status, create_user)
        VALUES (#{requirementNo}, #{requirementName}, #{requirementType}, #{deptId},
                #{applicantId}, #{estimatedAmount}, #{requirementDesc}, #{status}, #{createUser})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.ProcurementRequirement">
        UPDATE procurement_requirement
        <set>
            <if test="requirementName != null">requirement_name = #{requirementName},</if>
            <if test="estimatedAmount != null">estimated_amount = #{estimatedAmount},</if>
            <if test="requirementDesc != null">requirement_desc = #{requirementDesc},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE requirement_id = #{requirementId}
    </update>

    <delete id="deleteById">
        DELETE FROM procurement_requirement WHERE requirement_id = #{id}
    </delete>

</mapper>
