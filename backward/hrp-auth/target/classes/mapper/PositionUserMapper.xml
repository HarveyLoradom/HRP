<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.auth.mapper.PositionUserMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.PositionUser">
        <id column="id" property="id"/>
        <result column="position_id" property="positionId"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectByPositionId" resultMap="BaseResultMap">
        SELECT * FROM sys_position_user WHERE position_id = #{positionId}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM sys_position_user WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.PositionUser">
        INSERT INTO sys_position_user (position_id, user_id)
        VALUES (#{positionId}, #{userId})
    </insert>

    <insert id="batchInsert">
        INSERT INTO sys_position_user (position_id, user_id)
        VALUES
        <foreach collection="userIds" item="userId" separator=",">
            (#{positionId}, #{userId})
        </foreach>
    </insert>

    <delete id="deleteByPositionId">
        DELETE FROM sys_position_user WHERE position_id = #{positionId}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM sys_position_user WHERE user_id = #{userId}
    </delete>

    <delete id="deleteByPositionIdAndUserId">
        DELETE FROM sys_position_user WHERE position_id = #{positionId} AND user_id = #{userId}
    </delete>

</mapper>

