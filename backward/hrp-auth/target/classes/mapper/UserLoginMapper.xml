<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.auth.mapper.UserLoginMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.UserLogin">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="account" property="account"/>
        <result column="locked" property="locked"/>
        <result column="lock_time" property="lockTime"/>
        <result column="login_fail_count" property="loginFailCount"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM sys_user_login WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.UserLogin">
        INSERT INTO sys_user_login (user_id, account, locked, lock_time, login_fail_count, last_login_time)
        VALUES (#{userId}, #{account}, #{locked}, #{lockTime}, #{loginFailCount}, #{lastLoginTime})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.UserLogin">
        UPDATE sys_user_login
        <set>
            <if test="account != null">account = #{account},</if>
            <if test="locked != null">locked = #{locked},</if>
            <if test="lockTime != null">lock_time = #{lockTime},</if>
            <if test="loginFailCount != null">login_fail_count = #{loginFailCount},</if>
            <if test="lastLoginTime != null">last_login_time = #{lastLoginTime},</if>
        </set>
        WHERE user_id = #{userId}
    </update>

</mapper>

