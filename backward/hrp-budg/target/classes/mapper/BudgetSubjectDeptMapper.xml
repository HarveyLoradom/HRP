<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.budg.mapper.BudgetSubjectDeptMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.BudgetSubjectDept">
        <id column="id" property="id"/>
        <result column="subject_id" property="subjectId"/>
        <result column="dept_id" property="deptId"/>
        <result column="dept_code" property="deptCode"/>
        <result column="dept_name" property="deptName"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectBySubjectId" resultMap="BaseResultMap">
        SELECT * FROM budget_subject_dept WHERE subject_id = #{subjectId}
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.BudgetSubjectDept" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO budget_subject_dept (subject_id, dept_id, dept_code, dept_name, create_user, create_time)
        VALUES (#{subjectId}, #{deptId}, #{deptCode}, #{deptName}, #{createUser}, NOW())
    </insert>

    <delete id="deleteBySubjectId">
        DELETE FROM budget_subject_dept WHERE subject_id = #{subjectId}
    </delete>

    <resultMap id="DeptResultMap" type="com.hrp.common.entity.Dept">
        <id column="dept_id" property="deptId"/>
        <result column="dept_code" property="deptCode"/>
        <result column="dept_name" property="deptName"/>
    </resultMap>

    <select id="selectDeptsByIds" resultMap="DeptResultMap">
        SELECT dept_id, dept_code, dept_name
        FROM sys_dept
        WHERE dept_id IN
        <foreach collection="deptIds" item="deptId" open="(" separator="," close=")">
            #{deptId}
        </foreach>
    </select>

</mapper>

