<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.budg.mapper.BudgetSubjectMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.BudgetSubject">
        <id column="subject_id" property="subjectId"/>
        <result column="subject_code" property="subjectCode"/>
        <result column="subject_name" property="subjectName"/>
        <result column="subject_type" property="subjectType"/>
        <result column="manage_dept_id" property="manageDeptId"/>
        <result column="manage_dept_code" property="manageDeptCode"/>
        <result column="manage_dept_name" property="manageDeptName"/>
        <result column="manage_emp_id" property="manageEmpId"/>
        <result column="manage_emp_code" property="manageEmpCode"/>
        <result column="manage_emp_name" property="manageEmpName"/>
        <result column="is_stop" property="isStop"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM budget_subject WHERE subject_id = #{id}
    </select>

    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT * FROM budget_subject WHERE subject_code = #{code}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM budget_subject WHERE is_stop = 0 ORDER BY subject_code
    </select>

    <select id="selectByParentId" resultMap="BaseResultMap">
        SELECT * FROM budget_subject WHERE is_stop = 0 ORDER BY subject_code
    </select>

    <select id="selectByDeptId" resultMap="BaseResultMap">
        SELECT * FROM budget_subject WHERE manage_dept_id = #{deptId} AND is_stop = 0 ORDER BY subject_code
    </select>

    <select id="selectTree" resultMap="BaseResultMap">
        SELECT * FROM budget_subject WHERE is_stop = 0 ORDER BY subject_code
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.BudgetSubject" useGeneratedKeys="true" keyProperty="subjectId">
        INSERT INTO budget_subject (subject_code, subject_name, subject_type, 
                                   manage_dept_id, manage_dept_code, manage_dept_name,
                                   manage_emp_id, manage_emp_code, manage_emp_name, 
                                   is_stop, create_user)
        VALUES (#{subjectCode}, #{subjectName}, #{subjectType},
                #{manageDeptId}, #{manageDeptCode}, #{manageDeptName},
                #{manageEmpId}, #{manageEmpCode}, #{manageEmpName},
                #{isStop}, #{createUser})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.BudgetSubject">
        UPDATE budget_subject
        <set>
            <if test="subjectName != null">subject_name = #{subjectName},</if>
            <if test="subjectType != null">subject_type = #{subjectType},</if>
            <if test="manageDeptId != null">manage_dept_id = #{manageDeptId},</if>
            <if test="manageDeptCode != null">manage_dept_code = #{manageDeptCode},</if>
            <if test="manageDeptName != null">manage_dept_name = #{manageDeptName},</if>
            <if test="manageEmpId != null">manage_emp_id = #{manageEmpId},</if>
            <if test="manageEmpCode != null">manage_emp_code = #{manageEmpCode},</if>
            <if test="manageEmpName != null">manage_emp_name = #{manageEmpName},</if>
            <if test="isStop != null">is_stop = #{isStop},</if>
        </set>
        WHERE subject_id = #{subjectId}
    </update>

    <delete id="deleteById">
        DELETE FROM budget_subject WHERE subject_id = #{id}
    </delete>

</mapper>













