<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.contract.mapper.PactMainMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.PactMain">
        <id column="pact_id" property="pactId"/>
        <result column="contract_no" property="contractNo"/>
        <result column="contract_name" property="contractName"/>
        <result column="contract_type" property="contractType"/>
        <result column="party_a" property="partyA"/>
        <result column="party_b" property="partyB"/>
        <result column="contract_amount" property="contractAmount"/>
        <result column="sign_date" property="signDate"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="status" property="status"/>
        <result column="dept_id" property="deptId"/>
        <result column="manager_id" property="managerId"/>
        <result column="remark" property="remark"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM pact_main WHERE pact_id = #{id}
    </select>

    <select id="selectByContractNo" resultMap="BaseResultMap">
        SELECT * FROM pact_main WHERE contract_no = #{contractNo}
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM pact_main WHERE status = #{status} ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM pact_main ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.PactMain">
        INSERT INTO pact_main (contract_no, contract_name, contract_type, party_a, party_b,
                             contract_amount, sign_date, start_date, end_date, status,
                             dept_id, manager_id, remark, create_user)
        VALUES (#{contractNo}, #{contractName}, #{contractType}, #{partyA}, #{partyB},
                #{contractAmount}, #{signDate}, #{startDate}, #{endDate}, #{status},
                #{deptId}, #{managerId}, #{remark}, #{createUser})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.PactMain">
        UPDATE pact_main
        <set>
            <if test="contractName != null">contract_name = #{contractName},</if>
            <if test="contractType != null">contract_type = #{contractType},</if>
            <if test="partyA != null">party_a = #{partyA},</if>
            <if test="partyB != null">party_b = #{partyB},</if>
            <if test="contractAmount != null">contract_amount = #{contractAmount},</if>
            <if test="signDate != null">sign_date = #{signDate},</if>
            <if test="startDate != null">start_date = #{startDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE pact_id = #{pactId}
    </update>

    <delete id="deleteById">
        DELETE FROM pact_main WHERE pact_id = #{id}
    </delete>

</mapper>

