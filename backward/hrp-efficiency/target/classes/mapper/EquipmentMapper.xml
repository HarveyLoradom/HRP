<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.efficiency.mapper.EquipmentMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.Equipment">
        <id column="equipment_id" property="equipmentId"/>
        <result column="equipment_code" property="equipmentCode"/>
        <result column="equipment_name" property="equipmentName"/>
        <result column="equipment_type" property="equipmentType"/>
        <result column="purchase_date" property="purchaseDate"/>
        <result column="purchase_amount" property="purchaseAmount"/>
        <result column="dept_id" property="deptId"/>
        <result column="clinic_id" property="clinicId"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM equipment WHERE equipment_id = #{id}
    </select>

    <select id="selectByEquipmentCode" resultMap="BaseResultMap">
        SELECT * FROM equipment WHERE equipment_code = #{equipmentCode}
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM equipment WHERE status = #{status} ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM equipment ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.Equipment">
        INSERT INTO equipment (equipment_code, equipment_name, equipment_type, purchase_date,
                              purchase_amount, dept_id, clinic_id, status)
        VALUES (#{equipmentCode}, #{equipmentName}, #{equipmentType}, #{purchaseDate},
                #{purchaseAmount}, #{deptId}, #{clinicId}, #{status})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.Equipment">
        UPDATE equipment
        <set>
            <if test="equipmentName != null">equipment_name = #{equipmentName},</if>
            <if test="equipmentType != null">equipment_type = #{equipmentType},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE equipment_id = #{equipmentId}
    </update>

    <delete id="deleteById">
        DELETE FROM equipment WHERE equipment_id = #{id}
    </delete>

</mapper>
