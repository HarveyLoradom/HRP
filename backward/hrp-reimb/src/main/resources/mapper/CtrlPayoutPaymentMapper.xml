<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.reimb.mapper.CtrlPayoutPaymentMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.CtrlPayoutPayment">
        <id column="payment_id" property="paymentId"/>
        <result column="payout_id" property="payoutId"/>
        <result column="payment_amount" property="paymentAmount"/>
        <result column="payment_object" property="paymentObject"/>
        <result column="payment_method" property="paymentMethod"/>
        <result column="bank_name" property="bankName"/>
        <result column="bank_account" property="bankAccount"/>
        <result column="account_name" property="accountName"/>
        <result column="payment_date" property="paymentDate"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout_payment WHERE payment_id = #{id}
    </select>

    <select id="selectByPayoutId" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout_payment WHERE payout_id = #{payoutId} ORDER BY payment_id
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.CtrlPayoutPayment">
        INSERT INTO ctrl_payout_payment (payout_id, payment_amount, payment_object, payment_method,
                                        bank_name, bank_account, account_name, payment_date, remark)
        VALUES (#{payoutId}, #{paymentAmount}, #{paymentObject}, #{paymentMethod},
                #{bankName}, #{bankAccount}, #{accountName}, #{paymentDate}, #{remark})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.CtrlPayoutPayment">
        UPDATE ctrl_payout_payment
        <set>
            <if test="paymentAmount != null">payment_amount = #{paymentAmount},</if>
            <if test="paymentObject != null">payment_object = #{paymentObject},</if>
            <if test="paymentMethod != null">payment_method = #{paymentMethod},</if>
            <if test="bankName != null">bank_name = #{bankName},</if>
            <if test="bankAccount != null">bank_account = #{bankAccount},</if>
            <if test="accountName != null">account_name = #{accountName},</if>
            <if test="paymentDate != null">payment_date = #{paymentDate},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE payment_id = #{paymentId}
    </update>

    <delete id="deleteById">
        DELETE FROM ctrl_payout_payment WHERE payment_id = #{id}
    </delete>

    <delete id="deleteByPayoutId">
        DELETE FROM ctrl_payout_payment WHERE payout_id = #{payoutId}
    </delete>

</mapper>




