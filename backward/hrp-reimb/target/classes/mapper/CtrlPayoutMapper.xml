<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.reimb.mapper.CtrlPayoutMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.CtrlPayout">
        <id column="payout_id" property="payoutId"/>
        <result column="payout_billcode" property="payoutBillcode"/>
        <result column="emp_id" property="empId"/>
        <result column="emp_code" property="empCode"/>
        <result column="emp_name" property="empName"/>
        <result column="dept_id" property="deptId"/>
        <result column="payout_type_id" property="payoutTypeId"/>
        <result column="apply_amount" property="applyAmount"/>
        <result column="apply_reason" property="applyReason"/>
        <result column="apply_date" property="applyDate"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout WHERE payout_id = #{id}
    </select>

    <select id="selectByBillcode" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout WHERE payout_billcode = #{billcode}
    </select>

    <select id="selectByEmpId" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout WHERE emp_id = #{empId} ORDER BY create_time DESC
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout WHERE status = #{status} ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM ctrl_payout ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.CtrlPayout">
        INSERT INTO ctrl_payout (payout_billcode, emp_id, emp_code, emp_name, dept_id, payout_type_id, 
                                 apply_amount, apply_reason, apply_date, status, remark, create_user)
        VALUES (#{payoutBillcode}, #{empId}, #{empCode}, #{empName}, #{deptId}, #{payoutTypeId},
                #{applyAmount}, #{applyReason}, #{applyDate}, #{status}, #{remark}, #{createUser})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.CtrlPayout">
        UPDATE ctrl_payout
        <set>
            <if test="payoutTypeId != null">payout_type_id = #{payoutTypeId},</if>
            <if test="applyAmount != null">apply_amount = #{applyAmount},</if>
            <if test="applyReason != null">apply_reason = #{applyReason},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE payout_id = #{payoutId}
    </update>

    <delete id="deleteById">
        DELETE FROM ctrl_payout WHERE payout_id = #{id}
    </delete>

</mapper>
