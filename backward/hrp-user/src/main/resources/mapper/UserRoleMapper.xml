<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.user.mapper.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.UserRole">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM sys_user_role WHERE user_id = #{userId}
    </select>

    <select id="selectByRoleId" resultMap="BaseResultMap">
        SELECT * FROM sys_user_role WHERE role_id = #{roleId}
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.UserRole">
        INSERT INTO sys_user_role (user_id, role_id)
        VALUES (#{userId}, #{roleId})
    </insert>

    <delete id="deleteByUserId">
        DELETE FROM sys_user_role WHERE user_id = #{userId}
    </delete>

    <delete id="deleteByUserIdAndRoleId">
        DELETE FROM sys_user_role WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

</mapper>
