<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.user.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.hrp.common.entity.Role">
        <id column="role_id" property="roleId"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_name" property="roleName"/>
        <result column="role_desc" property="roleDesc"/>
        <result column="is_stop" property="isStop"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM sys_role WHERE role_id = #{roleId} AND is_stop = 0
    </select>

    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT * FROM sys_role WHERE role_code = #{roleCode} AND is_stop = 0
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM sys_role WHERE is_stop = 0 ORDER BY role_code ASC
    </select>

    <insert id="insert" parameterType="com.hrp.common.entity.Role">
        INSERT INTO sys_role (role_code, role_name, role_desc, is_stop, create_user)
        VALUES (#{roleCode}, #{roleName}, #{roleDesc}, #{isStop}, #{createUser})
    </insert>

    <update id="updateById" parameterType="com.hrp.common.entity.Role">
        UPDATE sys_role
        <set>
            <if test="roleCode != null">role_code = #{roleCode},</if>
            <if test="roleName != null">role_name = #{roleName},</if>
            <if test="roleDesc != null">role_desc = #{roleDesc},</if>
            <if test="isStop != null">is_stop = #{isStop},</if>
        </set>
        WHERE role_id = #{roleId}
    </update>

    <delete id="deleteById">
        UPDATE sys_role SET is_stop = 1 WHERE role_id = #{roleId}
    </delete>

</mapper>
