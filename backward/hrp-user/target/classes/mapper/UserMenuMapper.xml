<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrp.user.mapper.UserMenuMapper">

    <select id="selectMenuIdsByUserId" resultType="java.lang.Long">
        SELECT menu_id FROM sys_user_menu WHERE user_id = #{userId}
    </select>

    <delete id="deleteByUserId">
        DELETE FROM sys_user_menu WHERE user_id = #{userId}
    </delete>

    <insert id="batchInsert">
        INSERT INTO sys_user_menu (user_id, menu_id, create_time)
        VALUES
        <foreach collection="menuIds" item="menuId" separator=",">
            (#{userId}, #{menuId}, NOW())
        </foreach>
    </insert>

</mapper>

